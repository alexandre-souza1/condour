<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3 mb-10">
        <div class="bg-white rounded p-3 shadow">
          <h3>Agende o serviço de Manutenção</h3>
          <%= simple_form_for [@condominium, @service] do |f| %>
          <%= f.input :description, label: "Tipo de Manutenção" %>
          <%= f.input :identification, label: "Identificação do Prestador de Serviço" %>
          <%= f.input :date,
            label: "Data",
            as: :string,
            input_html: { data: { controller: "datepicker-manutencao" } } %>
          <%= f.input :time, label: "Horário:", as: :time, input_html: { class: "form-control" } %>
          <%= f.button :submit, "Agendar Manutenção", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
