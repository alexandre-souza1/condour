<%= render "shared/menu_style" %>

<div class="container card-rule-index p-3">
      <h2>Regras do Condom√≠nio:</h2>

  <div class="row d-flex justify-content-between">
    <div class="col-12">
      <div class="cards-trip">
        <% @rules.each_with_index do |rule| %>
        <%= rule.title %>
        <%= rule.file %>
        <% end %>
      </div>
    </div>
  </div>

  <% if current_user.admin %>
    <div class="col-4 d-flex justify-content-end">
      <%= link_to new_condominium_rule_path, title: "Minhas Regras" do %>
      <button class="btn btn-primary text-white">Adicionar Regras</button>
      <% end %>
    </div>
  <% end %>
</div>
