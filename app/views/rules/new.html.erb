<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3 mb-10">
        <div class="bg-white rounded p-3 shadow">
          <h3>Adicione as Regras do Condomínio aqui</h3>
          <%= simple_form_for [@condominium, @rule] do |f| %>
          <%= f.input :title, label: "Título" %>
          <%= f.input :file, as: :file, input_html: { multiple: true }, label: "Adicionar arquivos PDF" %>
          <%= f.button :submit, "Adicionar arquivos", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
