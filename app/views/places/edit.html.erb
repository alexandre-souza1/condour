<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3 mb-10">
        <div class="bg-white rounded p-3 shadow">
          <h3>Editar <%= @place.name %></h3>
          <%= simple_form_for [@condominium, @place] do |f| %>
            <%= f.input :name, label: "Nome", input_html: { value: @place.name } %>
            <%= f.input :price, label: "Valor por dia", placeholder: "R$", input_html: { value: @place.price } %>
            <%= f.input :description, label: "Descrição", input_html: { value: @place.description } %>
            <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Adicionar imagens" %>
            <%= f.button :submit, "Editar Área", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
