<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3 mb-10">
        <div class="bg-white rounded p-3 shadow">
          <h3>Criação de locais:</h3>
          <%= simple_form_for [@condominium, @place] do |f| %>
            <%= f.input :name, label: "Nome" %>
            <%= f.input :rent_price, label: "Valor por dia", placeholder: "R$" %>
            <%= f.input :description, label: "Descrição" %>
            <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Adicionar imagens" %>
            <%= f.button :submit, "Registrar Local", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
