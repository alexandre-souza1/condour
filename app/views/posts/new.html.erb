<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div data-controller="post" class="bg-white rounded p-3 shadow justify-content-center text-center">
          <h3>Área Comunidade</h3>
          <%= simple_form_for [@condominium, @post], data: {
            action: "submit->post#createPost"
          } do |f|  %>
            <%= f.input :content, label:"Conteúdo do Post" %>
            <%= f.button :submit %>
          <% end %>
          <div data-post-target="list" class="mt-5">
            <%= render partial: "card", collection: @posts, as: :post %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
