<div class="bg-sessions">>
  <div class="container py-5">
    <div class="row">
        <div class="col-12 col-md-6 offset-lg-3 mb-10">
          <div class="bg-white rounded p-3 shadow">
          <h3>Registre seu condomínio:</h3>
          <%= simple_form_for @condominium do |f| %>
          <%= f.input :name, label: "Nome do Condomínio" %>
          <%= f.input :address, label: "Endereço" %>
          <%= f.input :cnpj, label: "CNPJ" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Adicionar imagem do condomínio" %>
          <%= f.button :submit, "Registrar Condomínio", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
