<div class="bg-sessions">
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edite os dados do Condomínio</h3>
        <%= simple_form_for @condominium do |f| %>
          <%= f.input :name, label: "Nome do Condomínio", input_html: { value: @condominium.name } %>
          <%= f.input :address, selected: @condominium.address, label: "Endereço" %>
          <%= f.input :cnpj, label: "CNPJ", input_html: { value: @condominium.cnpj } %>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Adicionar imagens do Condomínio" %>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Editar Condomínio" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
